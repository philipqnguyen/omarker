<div class="row">
<div class="small-4 small-offset-4 columns">
<%= form_for(@bookmark) do |f| %>
  <% if @bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

      <ul>
      <% @bookmark.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.text_field :website, placeholder: "Enter Website", class: "small-3 columns" %>
  <div class="actions">

  </div>
<% end %>
</div>
</div>

<div class="drawer">
<div class="masonry js-masonry"  data-masonry-options='{ "columnWidth": ".grid-sizer", "itemSelector": ".item" }'>
  <div class="grid-sizer"></div>
<% @bookmarks.each do |bookmark| %>
  <div class="item bookmark">
    <% if bookmark.name.length > 20 %>
    <%= link_to "#{bookmark.name[0..19]}...", bookmark.website %>
    <% else %>
    <%= link_to bookmark.name, bookmark.website %>
    <% end %>
    <div class="info">
      <%= link_to 'Show', bookmark %>
      <%= link_to 'Edit', edit_bookmark_path(bookmark) %>
      <%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>
</div>
</div>
