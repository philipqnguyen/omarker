<div class="row">
  <div class="small-4 small-offset-4 columns">
    <%= form_for(@bookmark) do |f| %>
      <% if @bookmark.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

          <ul>
          <% @bookmark.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.text_field :website, placeholder: "Enter Website", class: "small-3 columns" %>
      <div class="actions">

      </div>
    <% end %>
  </div>
</div>

<%= hidden_field_tag :user_id, current_user.id %>

<div class="drawer">
  <div class="masonry js-masonry"  data-masonry-options='{ "columnWidth": ".grid-sizer", "itemSelector": ".item" }'>
    <div class="grid-sizer"></div>
    <div id="content-bookmarks">

      <%= render @bookmarks %>

    </div>
  </div>
</div>

<%= will_paginate @bookmarks %>
